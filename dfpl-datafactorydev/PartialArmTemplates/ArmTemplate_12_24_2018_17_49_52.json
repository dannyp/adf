{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "dfpl-datafactorydev"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/CopyPipeline_ysb')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "ForEach_ysb",
						"type": "ForEach",
						"typeProperties": {
							"items": {
								"value": "@pipeline().parameters.cw_items",
								"type": "Expression"
							},
							"activities": [
								{
									"name": "Copy_ysb",
									"type": "Copy",
									"policy": {
										"timeout": "7.00:00:00",
										"retry": 0,
										"retryIntervalInSeconds": 30,
										"secureOutput": false,
										"secureInput": false
									},
									"userProperties": [
										{
											"name": "Source",
											"value": "@{item().source.tableName}"
										},
										{
											"name": "Destination",
											"value": "raw/@{item().destination.fileName}"
										}
									],
									"typeProperties": {
										"source": {
											"type": "SqlSource"
										},
										"sink": {
											"type": "BlobSink"
										},
										"enableStaging": false,
										"dataIntegrationUnits": 0
									},
									"inputs": [
										{
											"referenceName": "SourceDataset_ysb",
											"type": "DatasetReference",
											"parameters": {
												"cw_tableName": "@item().source.tableName"
											}
										}
									],
									"outputs": [
										{
											"referenceName": "DestinationDataset_ysb",
											"type": "DatasetReference",
											"parameters": {
												"cw_fileName": "@item().destination.fileName"
											}
										}
									]
								}
							]
						}
					}
				],
				"parameters": {
					"cw_items": {
						"type": "Array",
						"defaultValue": [
							{
								"source": {
									"tableName": "SalesLT.Address"
								},
								"destination": {
									"fileName": "SalesLT.Address.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.Customer"
								},
								"destination": {
									"fileName": "SalesLT.Customer.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.CustomerAddress"
								},
								"destination": {
									"fileName": "SalesLT.CustomerAddress.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.Product"
								},
								"destination": {
									"fileName": "SalesLT.Product.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.ProductCategory"
								},
								"destination": {
									"fileName": "SalesLT.ProductCategory.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.ProductDescription"
								},
								"destination": {
									"fileName": "SalesLT.ProductDescription.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.ProductModel"
								},
								"destination": {
									"fileName": "SalesLT.ProductModel.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.ProductModelProductDescription"
								},
								"destination": {
									"fileName": "SalesLT.ProductModelProductDescription.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.SalesOrderDetail"
								},
								"destination": {
									"fileName": "SalesLT.SalesOrderDetail.parquet"
								}
							},
							{
								"source": {
									"tableName": "SalesLT.SalesOrderHeader"
								},
								"destination": {
									"fileName": "SalesLT.SalesOrderHeader.parquet"
								}
							}
						]
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DestinationDataset_ysb')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/DestinationDataset_ysb')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureBlobStorage1",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"cw_fileName": {
						"type": "String"
					}
				},
				"type": "AzureBlob",
				"typeProperties": {
					"format": {
						"type": "ParquetFormat"
					},
					"fileName": {
						"value": "@dataset().cw_fileName",
						"type": "Expression"
					},
					"folderPath": "raw"
				}
			}
		}
	]
}